<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="changelog-1.0" author="paulmcg">
        <createTable tableName="name_basics" schemaName="public">
            <column name="_id" type="text">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="nconst" type="text">
                <constraints nullable="false" primaryKey="false" unique="false"/>
            </column>
            <column name="primary_name" type="text">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="birth_year" type="smallint">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="death_year" type="smallint">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="primary_profession" type="text">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="known_for_titles" type="text">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="name_basics" schemaName="public"/>
        </rollback>
    </changeSet>

    <changeSet id="changelog-1.1" author="paulmcg">
        <createIndex tableName="name_basics" schemaName="public" indexName="NAME_IDX">
            <column name="_id"/>
        </createIndex>
        <rollback>
            <dropIndex tableName="name_basics" indexName="NAME_IDX"/>
        </rollback>
    </changeSet>
</databaseChangeLog>